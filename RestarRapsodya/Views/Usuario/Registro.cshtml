@model RestarRapsodya.Models.Usuario
@{
    ViewData["Title"] = "Registro Cliente";
}
@section menu_navegacion{
}
<section>
    <div class="container-fluid pt-3">
        <div class="row d-flex justify-content-center">
            <div class="card mb-3 p-0 col-lg-8 col-md-12 customCard">
                <img src="~/Imagenes/imgClienteLogIn.jpg" class="card-img-top img-fluid" alt="Imagen LogIn Administradores">
                <div class="card-header pt-3">
                    <h3 class="card-title text-center">Registro como Cliente</h3>
                </div>
                <div class="card-body p-1 d-flex justify-content-start">
                    <form asp-action="Registrarse" class="pe-5 mt-3 ps-5 w-75 m-auto">
                        <div asp-validation-summary="ModelOnly" class="text-warning"></div>
                        <div class="form-group pb-2 d-flex">
                            <label asp-for="Nombre" class="w-25 me-4 fs-5">Nombre</label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-warning"></span>
                        </div>
                        <div class="form-group pb-2 d-flex">
                            <label asp-for="Correo" class="w-25 me-4 fs-5">Correo</label>
                            <input asp-for="Correo" type="email" class="form-control" />
                            <span asp-validation-for="Correo" class="text-warning">
                                @if (ViewBag.Agregado == true)
                                {
                                    <text>Ese Email ya esta registrado</text>
                                }
                            </span>
                        </div>
                        <div class="form-group pb-2 d-flex">
                            <label asp-for="Telefono" class="w-25 me-4 fs-5">Telefono</label>
                            <input asp-for="Telefono" type="number" class="form-control" />
                            <span asp-validation-for="Telefono" class="text-warning"></span>
                        </div>
                        <div class="form-group pb-2">
                            <input hidden asp-for="id_Rol" value="2" />
                            <input hidden asp-for="password" type="password" value="Cliente1234"/>
                        </div>
                        <div class="form-group d-flex justify-content-center">
                            <input type="submit" value="Registrarse" class="mt-2 mb-3 btnCard bg-verde-1 fs-5 fw-bold" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>