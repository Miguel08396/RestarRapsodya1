@model RestarRapsodya.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}
@section menu_navegacion{
    <ul class="navbar-nav d-flex m-0 w-100">
        <li class="me-3 d-flex align-items-center">
            <a class="p-2 btnCard" asp-area="" asp-controller="Usuario" asp-action="principalAdmin">Menu</a>
        </li>
        <li class="me-3 d-flex align-items-center">
            <a class="btnCard p-2" asp-area="" asp-controller="Usuario" asp-action="CerrarSesion">Cerrar Sesion</a>
        </li>
    </ul>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<section>
    <div class="container-fluid pt-5">
        <div class="row d-flex justify-content-around">
            <div class="col-lg-6 col-md-8 col-12 crearCustom pb-3 pt-2 text-white ">
                <h1 class="text-center pt-2">Crear Usuario</h1>
                <hr />
                <form asp-action="Crear" class="pe-5 ps-5">
                    <div asp-validation-summary="ModelOnly" class="text-warning"></div>
                    <div class="form-group pb-2">
                        <label asp-for="Nombre" class="control-label fs-5">Nombre de usuario</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-warning"></span>
                    </div>
                    <div class="form-group pb-2">
                        <label asp-for="Correo" class="control-label fs-5">Correo</label>
                        <input asp-for="Correo" type="email" class="form-control" />
                        <span asp-validation-for="Correo" class="text-warning">
                            @if(ViewBag.Agregado == false)
                            {
                                <text>Ese Email ya esta registrado</text>
                            }
                        </span>
                    </div>
                    <div class="form-group pb-2">
                        <label asp-for="password" class="control-label fs-5">Contraseña</label>
                        <input asp-for="password" type="password" class="form-control" />
                        <span asp-validation-for="password" class="text-warning"></span>
                    </div>
                    <div class="form-group pb-2">
                        <label asp-for="id_Rol" class="control-label fs-5">Rol</label>
                        <select asp-for="id_Rol" class="form-control col-4" asp-items="ViewBag.Roles"></select>
                        <span asp-validation-for="id_Rol" class="text-warning"></span>
                    </div>
                    <div class="form-group pb-2">
                        <label asp-for="Telefono" class="control-label fs-5">Telefono</label>
                        <input asp-for="Telefono" type="number" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-warning"></span>
                    </div>
                    <div class="form-group d-flex justify-content-center">
                        <input type="submit" value="Crear" class="mt-4 btnCard bg-verde-1 fs-5 fw-bold" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>