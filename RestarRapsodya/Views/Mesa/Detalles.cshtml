@model RestarRapsodya.Models.Mesa

@{
    ViewData["Title"] = "Detalles";
}
@section menu_navegacion{
    <ul class="navbar-nav d-flex m-0 w-100">
        <li class="me-3 d-flex align-items-center">
            <a class="p-2 btnCard" asp-area="" asp-controller="Usuario" asp-action="principalAdmin">Menu</a>
        </li>
        <li class="me-3 d-flex align-items-center">
            <a class="btnCard p-2" asp-area="" asp-controller="Home" asp-action="Privacy">Cerrar Sesion</a>
        </li>
    </ul>
}
<section>
    <div class="container-fluid pt-5">
        <div class="row d-flex justify-content-around">
            <div class="col-8 crearCustom pb-3 pt-2 text-white ">
                <h1 class="text-center pt-2">Detalles</h1>
                <hr />
                <div>
                    <dl class="row ps-5 ms-2">
                        <dt class="col-sm-2 mb-3 h5 text-lightGreen">
                            @Html.DisplayNameFor(model => model.Capacidad)
                        </dt>
                        <dd class="col-sm-10 mb-3 h5">
                            @Html.DisplayFor(model => model.Capacidad)
                        </dd>
                        <dt class="col-sm-2 mb-3 h5 text-lightGreen">
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-10 mb-3 h5">
                            @Html.DisplayFor(model => model.Estado.estado)
                        </dd>
                    </dl>
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btnCard p-3 me-5" asp-action="Editar" asp-route-id="@Model.id_Estado">Editar</a>
                    <a class="btnCard p-3" asp-action="consultar">Vuelve a la lista</a>
                </div>
            </div>
        </div>
    </div>
</section>